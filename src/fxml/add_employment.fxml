<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5.0" stylesheets="@../resources/main.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AddEmploymentController">
   <children>
      <CheckBox fx:id="isActive" mnemonicParsing="false" text="Active" textAlignment="RIGHT" VBox.vgrow="ALWAYS" />
      <VBox alignment="CENTER_RIGHT" spacing="5.0">
         <children>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Label text="Department:" />
                  <ComboBox fx:id="department_combobox" maxHeight="16.0" minHeight="16.0" prefHeight="16.0" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Label text="Start Of Employment:" />
                  <DatePicker fx:id="employment_start" maxHeight="16.0" minHeight="16.0" prefHeight="16.0" prefWidth="149.0" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Label text="End Of Employment:" />
                  <DatePicker fx:id="employment_end" maxHeight="16.0" minHeight="16.0" prefHeight="16.0" prefWidth="149.0" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Label text="Position:" />
                  <TextField fx:id="position" maxHeight="16.0" minHeight="16.0" prefHeight="16.0" prefWidth="149.0" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Label text="Status Of Employment:" />
                  <TextField fx:id="employment_status" maxHeight="16.0" minHeight="16.0" prefHeight="16.0" prefWidth="149.0" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="5.0">
         <children>
            <Button fx:id="updatebutton" mnemonicParsing="false" onAction="#add" text="Add" />
            <Button mnemonicParsing="false" text="Cancel" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
