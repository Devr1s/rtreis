<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5.0" stylesheets="@../resources/main.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LeaveController">
   <children>
      <HBox spacing="4.0">
         <children>
            <Label text="Leave Type:" />
            <ComboBox fx:id="type" maxHeight="16.0" minHeight="16.0" prefHeight="16.0" prefWidth="152.0" />
         </children>
      </HBox>
      <HBox spacing="8.0">
         <children>
            <DatePicker fx:id="from" maxHeight="16.0" minHeight="16.0" prefHeight="16.0" prefWidth="98.0" />
            <Label text="-" />
            <DatePicker fx:id="to" maxHeight="16.0" minHeight="16.0" prefHeight="16.0" prefWidth="98.0" />
         </children>
      </HBox>
      <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#arrangeleave" text="Arrange">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
